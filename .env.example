# Chave da API da OpenAI (obrigatória)
# Obtenha uma chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sua_chave_aqui

# Configurações do modelo OpenAI (opcionais)
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# Configurações de voz
VOICE_RATE=150
VOICE_VOLUME=0.9
VOICE_LANGUAGE=pt-BR

# Configurações de reconhecimento de fala
SPEECH_ENERGY_THRESHOLD=300
SPEECH_PAUSE_THRESHOLD=0.8

# Configurações da aplicação
APP_NAME=Atendimento IA
APP_VERSION=0.1.0
DEBUG=False
